{{#each this as |item|}}
<li class="menu__item">
    <div class="card">
        <img src="{{item.image}}" alt="{{item.name}}" class="card__image" />
        <div class="card__content">
            <h2 class="card__name">{{item.name}}</h2>
            <p class="card__price">
                <i class="material-icons">
                    monetization_on
                </i>
                {{item.price}} кредитов
            </p>

            <p class="card__descr">
                {{item.description}}
            </p>

            <ul class="tag-list">
                {{#each item.ingredients as |ingredient|}}
                <li class="tag-list__item">{{ingredient}}</li>
                {{/each}}
            </ul>
        </div>

        <button class="card__button button">
            <i class="material-icons button__icon">
                shopping_cart
            </i>
            В корзину
        </button>
    </div>
</li>
{{/each}}